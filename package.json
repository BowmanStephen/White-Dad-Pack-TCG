{
  "name": "daddeck",
  "type": "module",
  "version": "0.1.0",
  "description": "DadDeck - The Ultimate White Dad Trading Card Simulator",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test": "vitest",
    "test:run": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:visual": "playwright test --project=visual-tests-chromium",
    "test:visual:all": "playwright test --project=visual-tests-chromium --project=visual-tests-firefox --project=visual-tests-webkit",
    "test:visual:update": "playwright test --project=visual-tests-chromium --update-snapshots",
    "test:visual:mobile": "playwright test --project=visual-tests-mobile",
    "optimize:images": "node scripts/optimize-images.mjs",
    "generate-og-image": "node scripts/generate-og-image.mjs",
    "generate-svgs": "bun run scripts/generate-card-svgs.ts",
    "prebuild": "bun run optimize:images && bun run generate-og-image && bun run generate-sitemap && bun run generate-svgs",
    "generate-sitemap": "node scripts/generate-sitemap.mjs",
    "discord-bot": "bun run discord-bot/index.ts",
    "discord-bot:dev": "bun --watch run discord-bot/index.ts",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.6",
    "@astrojs/svelte": "^7.2.5",
    "@astrojs/tailwind": "^6.0.2",
    "@nanostores/persistent": "^1.2.0",
    "astro": "^5.16.11",
    "discord.js": "^14.25.1",
    "dompurify": "^3.3.1",
    "dotenv": "^17.2.3",
    "entities": "^7.0.0",
    "html2canvas": "^1.4.1",
    "localforage": "^1.10.0",
    "nanostores": "^1.1.0",
    "satori": "^0.19.1",
    "svelte": "^5.46.4",
    "svelte-i18n": "^4.0.1",
    "tailwindcss": "3",
    "typescript": "^5.9.3",
    "vite-imagetools": "^9.0.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@storybook/addon-docs": "8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "8.6.14",
    "@storybook/addon-svelte-csf": "5.0.10",
    "@storybook/addon-themes": "8.6.14",
    "@storybook/svelte": "8.6.14",
    "@storybook/svelte-vite": "8.6.14",
    "@types/dompurify": "^3.2.0",
    "@types/node": "^25.0.9",
    "prettier": "^3.8.0",
    "prettier-plugin-svelte": "^3.4.1",
    "sharp": "^0.34.5",
    "storybook": "8.6.14",
    "terser": "^5.46.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  }
}
