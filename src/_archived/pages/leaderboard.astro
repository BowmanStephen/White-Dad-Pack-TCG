---
import Layout from '@/layouts/BaseLayout.astro';
import LeaderboardPage from '@/components/leaderboard/LeaderboardPage.svelte';

const title = 'Leaderboards - DadDeck™ Trading Card Simulator';
const description = 'Compete with dads worldwide on the DadDeck™ leaderboards. Track your collection value, battle record, and more!';

// SEO metadata
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const openGraph = {
  title: 'DadDeck™ Leaderboards - Global Rankings',
  description: 'See how you stack up against dads worldwide. Compete for the most valuable collection, best battle record, and more!',
  image: '/images/og/leaderboard.png',
  url: canonicalURL.toString(),
  type: 'website' as const,
};
---

<Layout title={title} description={description} openGraph={openGraph}>
  <main class="page-container">
    <LeaderboardPage client:load />
  </main>
</Layout>

<style>
  .page-container {
    min-height: 100vh;
    background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  }

  :global(.dark) .page-container {
    background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
  }
</style>
