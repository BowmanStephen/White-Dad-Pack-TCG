---
// Static pack preview for the landing page
---

<div class="relative">
  <!-- Glow effect behind pack -->
  <div class="absolute inset-0 bg-gradient-to-r from-amber-500/30 to-orange-500/30 blur-3xl rounded-full scale-150"></div>
  
  <!-- Pack container -->
  <div class="relative animate-pack-glow cursor-pointer group" id="pack-preview">
    <!-- Pack wrapper -->
    <div class="relative w-64 h-96 md:w-80 md:h-[480px] rounded-2xl overflow-hidden shadow-2xl transform transition-transform duration-300 group-hover:scale-105">
      <!-- Pack background -->
      <div class="absolute inset-0 bg-gradient-to-br from-slate-800 via-slate-700 to-slate-800 border-4 border-amber-500/50 rounded-2xl">
        <!-- Inner pattern -->
        <div class="absolute inset-4 border-2 border-amber-500/30 rounded-xl"></div>
        
        <!-- Pack design -->
        <div class="absolute inset-0 flex flex-col items-center justify-center p-8">
          <!-- Logo area -->
          <div class="text-center mb-6">
            <div class="text-4xl md:text-5xl font-bold">
              <span class="text-amber-400">Dad</span><span class="text-white">Deck</span>
            </div>
            <div class="text-amber-400/80 text-sm mt-1">SERIES 1</div>
          </div>
          
          <!-- Pack art placeholder -->
          <div class="w-32 h-32 md:w-40 md:h-40 rounded-full bg-gradient-to-br from-amber-500/20 to-orange-500/20 flex items-center justify-center mb-6 border-2 border-amber-500/30">
            <span class="text-6xl md:text-7xl">ðŸ‘”</span>
          </div>
          
          <!-- Pack info -->
          <div class="text-center">
            <div class="text-white font-bold text-lg">BOOSTER PACK</div>
            <div class="text-slate-400 text-sm">7 Cards Inside</div>
          </div>
          
          <!-- Rarity indicator -->
          <div class="mt-4 flex gap-1">
            <div class="w-2 h-2 rounded-full bg-gray-400"></div>
            <div class="w-2 h-2 rounded-full bg-blue-400"></div>
            <div class="w-2 h-2 rounded-full bg-yellow-400"></div>
            <div class="w-2 h-2 rounded-full bg-purple-400"></div>
            <div class="w-2 h-2 rounded-full bg-orange-400"></div>
            <div class="w-2 h-2 rounded-full bg-pink-400"></div>
          </div>
        </div>
        
        <!-- Shimmer effect -->
        <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/5 to-transparent animate-shimmer pointer-events-none"></div>
      </div>
    </div>
    
    <!-- Floating cards behind pack -->
    <div class="absolute -left-8 top-1/4 w-20 h-28 bg-slate-700 rounded-lg shadow-xl -rotate-12 opacity-60 border border-slate-600 animate-float-slow"></div>
    <div class="absolute -right-8 top-1/3 w-20 h-28 bg-slate-700 rounded-lg shadow-xl rotate-12 opacity-60 border border-slate-600 animate-float-medium"></div>
    <div class="absolute -left-4 bottom-1/4 w-16 h-24 bg-slate-700 rounded-lg shadow-xl rotate-6 opacity-40 border border-slate-600 animate-float-fast"></div>
  </div>
  
  <!-- Click hint -->
  <div class="absolute -bottom-8 left-1/2 transform -translate-x-1/2 text-slate-400 text-sm animate-pulse">
    Click to open!
  </div>
</div>

<style>
  @keyframes shimmer {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(100%);
    }
  }
  
  .animate-shimmer {
    animation: shimmer 3s ease-in-out infinite;
  }
</style>

<script>
  // Add click handler to navigate to pack opening
  document.getElementById('pack-preview')?.addEventListener('click', () => {
    window.location.href = '/pack';
  });
</script>
