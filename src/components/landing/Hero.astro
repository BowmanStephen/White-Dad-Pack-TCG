    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Text content -->
      <div class="text-center lg:text-left">
        <h1 id="hero-heading" class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
