          <div class="text-center">
            <div class="text-3xl font-bold text-amber-400">50+</div>
            <div class="text-sm text-slate-400">{t.stats.cards}</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-amber-400">6</div>
            <div class="text-sm text-slate-400">{t.stats.rarity}</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-amber-400">100%</div>
            <div class="text-sm text-slate-400">{t.stats.free}</div>
