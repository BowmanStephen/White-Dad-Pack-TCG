---
import Layout from '@/layouts/BaseLayout.astro';
import LeaderboardPage from '@/components/leaderboard/LeaderboardPage.svelte';
import ErrorBoundary from '@/components/common/ErrorBoundary.svelte';
import { t } from '@/i18n';

// SEO metadata
const title = t('leaderboard.title');
const description = t('leaderboard.description');
---

<Layout title={title} description={description}>
  <main class="main-content">
    <ErrorBoundary
      component="LeaderboardPage"
      fallbackTitle="Leaderboard Error"
      fallbackMessage="We couldn't load the leaderboard. Please refresh the page."
      onRetry={() => window.location.reload()}
    >
      <LeaderboardPage client:load />
    </ErrorBoundary>
  </main>
</Layout>

<style>
  .main-content {
    min-height: 100vh;
    background: var(--color-background-primary, #f8fafc);
  }

  :global(.dark) .main-content {
    background: var(--color-background-primary, #0f172a);
  }
</style>
