---
/**
 * Leaderboard Page
 *
 * Displays global and friends leaderboards for various player statistics.
 * Rankings include: Most Packs Opened, Most Unique Cards, Most Mythic Cards, Largest Collection.
 */

import BaseLayout from '@/layouts/BaseLayout.astro';
import LeaderboardPage from '@/components/leaderboard/LeaderboardPage.svelte';
import { SEO_TITLE, SEO_DESCRIPTION, SITE_NAME } from '@/lib/seo';

// Page metadata
const title = `Leaderboard - ${SITE_NAME}`;
const description = `Compare your collection with other dads worldwide. Track your ranking for most packs opened, unique cards collected, mythic cards found, and more.`;
---

<BaseLayout title={title} description={description}>
  <main class="leaderboard-page-container min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <LeaderboardPage client:only="svelte" />
    </div>
  </main>
</BaseLayout>

<style>
  /* Page-specific overrides */
  .leaderboard-page-container {
    background-image:
      radial-gradient(circle at 20% 50%, rgba(251, 146, 60, 0.05) 0%, transparent 50%),
      radial-gradient(circle at 80% 80%, rgba(239, 68, 68, 0.05) 0%, transparent 50%);
  }

  /* Custom scrollbar for leaderboard list */
  :global(.leaderboard-list) {
    scrollbar-width: thin;
    scrollbar-color: rgba(251, 146, 60, 0.5) rgba(255, 255, 255, 0.05);
  }

  :global(.leaderboard-list)::-webkit-scrollbar {
    width: 8px;
  }

  :global(.leaderboard-list)::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 4px;
  }

  :global(.leaderboard-list)::-webkit-scrollbar-thumb {
    background: rgba(251, 146, 60, 0.5);
    border-radius: 4px;
  }

  :global(.leaderboard-list)::-webkit-scrollbar-thumb:hover {
    background: rgba(251, 146, 60, 0.7);
  }
</style>
