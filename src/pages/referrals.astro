---
/**
 * Referrals Page
 *
 * Main referral hub for managing referral codes, tracking referrals,
 * viewing rewards, and competing on the leaderboard.
 */

import BaseLayout from '@/layouts/BaseLayout.astro';
import ReferralDashboard from '@/components/referral/ReferralDashboard.svelte';
import ReferralLeaderboard from '@/components/referral/ReferralLeaderboard.svelte';
import { getMyReferralCode, getUnclaimedPackCount, getReferralStatsSummary } from '@/stores/referral';
---

<BaseLayout title="Referrals - DadDeck‚Ñ¢">
  <main class:container={true}>
    <!-- Header -->
    <header class="referrals-header">
      <h1>üéÅ Referral Rewards</h1>
      <p class="subtitle">Invite friends and earn free packs!</p>

      <!-- Stats Bar -->
      <div class="stats-bar">
        <div class="stat-item">
          <span class="stat-icon">üë•</span>
          <span class="stat-value">{getReferralStatsSummary().totalReferrals}</span>
          <span class="stat-label">Referred</span>
        </div>
        <div class="stat-item">
          <span class="stat-icon">üéÅ</span>
          <span class="stat-value">{getUnclaimedPackCount()}</span>
          <span class="stat-label">Unclaimed Packs</span>
        </div>
        <div class="stat-item">
          <span class="stat-icon">üîó</span>
          <span class="stat-value code">{getMyReferralCode()}</span>
          <span class="stat-label">Your Code</span>
        </div>
      </div>
    </header>

    <!-- Main Content Grid -->
    <div class="referrals-grid">
      <!-- Left Column: Dashboard -->
      <div class="left-column">
        <section class="section dashboard-section">
          <div class="section-header">
            <h2>Your Referral Dashboard üìä</h2>
          </div>
          <ReferralDashboard client:load />
        </section>
      </div>

      <!-- Right Column: Leaderboard & Info -->
      <div class="right-column">
        <!-- Leaderboard Section -->
        <section class="section leaderboard-section">
          <div class="section-header">
            <h2>Top Referrers üèÜ</h2>
          </div>
          <ReferralLeaderboard client:load />
        </section>

        <!-- How It Works Card -->
        <section class="section how-it-works">
          <h3>How It Works üí°</h3>
          <div class="steps">
            <div class="step">
              <span class="step-number">1</span>
              <div class="step-content">
                <span class="step-title">Share Your Link</span>
                <span class="step-description">Copy your unique referral code and share it with friends</span>
              </div>
            </div>
            <div class="step">
              <span class="step-number">2</span>
              <div class="step-content">
                <span class="step-title">Friend Joins</span>
                <span class="step-description">When they sign up with your code, they get 2 free packs</span>
              </div>
            </div>
            <div class="step">
              <span class="step-number">3</span>
              <div class="step-content">
                <span class="step-title">They Play</span>
                <span class="step-description">Once they open 10 packs, you earn 5 free packs!</span>
              </div>
            </div>
            <div class="step">
              <span class="step-number">4</span>
              <div class="step-content">
                <span class="step-title">Repeat!</span>
                <span class="step-description">No limit - refer as many friends as you want</span>
              </div>
            </div>
          </div>
        </section>

        <!-- Reward Info Card -->
        <section class="section reward-info">
          <h3>Reward Details üéÅ</h3>
          <div class="reward-breakdown">
            <div class="reward-item">
              <span class="reward-icon">üèÜ</span>
              <div class="reward-details">
                <span class="reward-title">You Get</span>
                <span class="reward-amount">5 Free Packs</span>
                <span class="reward-condition">When your friend opens 10 packs</span>
              </div>
            </div>
            <div class="reward-item">
              <span class="reward-icon">üéâ</span>
              <div class="reward-details">
                <span class="reward-title">Friend Gets</span>
                <span class="reward-amount">2 Free Packs</span>
                <span class="reward-condition">Just for joining with your code</span>
              </div>
            </div>
          </div>
        </section>

        <!-- Quick Actions Card -->
        <section class="section quick-actions">
          <h3>Quick Actions ‚ö°</h3>
          <div class="action-grid">
            <a href="/pack" class="action-card">
              <span class="action-icon">üì¶</span>
              <span class="action-label">Open Pack</span>
            </a>
            <a href="/collection" class="action-card">
              <span class="action-icon">üìö</span>
              <span class="action-label">Collection</span>
            </a>
            <a href="/friends" class="action-card">
              <span class="action-icon">üë•</span>
              <span class="action-label">Friends</span>
            </a>
            <a href="/leaderboard" class="action-card">
              <span class="action-icon">üèÜ</span>
              <span class="action-label">Leaderboard</span>
            </a>
          </div>
        </section>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  main {
    min-height: 100vh;
    padding: 2rem 1rem;
  }

  .referrals-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .referrals-header h1 {
    font-size: 2.5rem;
    font-weight: 800;
    background: linear-gradient(135deg, #22c55e 0%, #fbbf24 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    font-size: 1rem;
    color: #9ca3af;
    margin-bottom: 1.5rem;
  }

  .stats-bar {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-bottom: 1.5rem;
    flex-wrap: wrap;
  }

  .stat-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(0, 0, 0, 0.3);
    border: 1px solid #22c55e;
    border-radius: 0.5rem;
    padding: 0.75rem 1rem;
  }

  .stat-icon {
    font-size: 1.25rem;
  }

  .stat-value {
    font-size: 1.25rem;
    font-weight: 700;
    color: #fbbf24;
  }

  .stat-value.code {
    font-family: monospace;
    letter-spacing: 0.05em;
  }

  .stat-label {
    font-size: 0.75rem;
    color: #9ca3af;
    text-transform: uppercase;
    font-weight: 600;
  }

  .referrals-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
    max-width: 1400px;
    margin: 0 auto;
  }

  .left-column,
  .right-column {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .section {
    background: rgba(0, 0, 0, 0.3);
    border: 1px solid #3b82f6;
    border-radius: 0.75rem;
    padding: 1.25rem;
  }

  .section-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 1rem;
  }

  .section-header h2 {
    font-size: 1.25rem;
    font-weight: 700;
    color: #ffffff;
    margin: 0;
  }

  .section h3 {
    font-size: 1rem;
    font-weight: 600;
    color: #d1d5db;
    margin: 0 0 1rem 0;
  }

  .steps {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .step {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
  }

  .step-number {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
    background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
    border-radius: 50%;
    font-weight: 700;
    font-size: 0.875rem;
    color: #ffffff;
    flex-shrink: 0;
  }

  .step-content {
    display: flex;
    flex-direction: column;
  }

  .step-title {
    font-size: 0.875rem;
    font-weight: 600;
    color: #ffffff;
    margin-bottom: 0.25rem;
  }

  .step-description {
    font-size: 0.75rem;
    color: #9ca3af;
  }

  .reward-breakdown {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .reward-item {
    display: flex;
    gap: 0.75rem;
    background: rgba(59, 130, 246, 0.1);
    border: 1px solid #3b82f6;
    border-radius: 0.5rem;
    padding: 0.75rem;
  }

  .reward-icon {
    font-size: 1.5rem;
  }

  .reward-details {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .reward-title {
    font-size: 0.875rem;
    font-weight: 600;
    color: #ffffff;
  }

  .reward-amount {
    font-size: 1rem;
    font-weight: 700;
    color: #fbbf24;
  }

  .reward-condition {
    font-size: 0.75rem;
    color: #9ca3af;
  }

  .action-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.75rem;
  }

  .action-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    background: rgba(59, 130, 246, 0.2);
    border: 1px solid #3b82f6;
    border-radius: 0.5rem;
    padding: 1rem;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .action-card:hover {
    background: rgba(59, 130, 246, 0.3);
    border-color: #60a5fa;
    transform: translateY(-2px);
  }

  .action-icon {
    font-size: 1.5rem;
  }

  .action-label {
    font-size: 0.875rem;
    font-weight: 600;
    color: #d1d5db;
  }

  @media (max-width: 1024px) {
    .referrals-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 640px) {
    main {
      padding: 1rem 0.5rem;
    }

    .referrals-header h1 {
      font-size: 1.75rem;
    }

    .stats-bar {
      gap: 0.75rem;
    }

    .stat-item {
      padding: 0.5rem 0.75rem;
      flex: 1;
      justify-content: center;
    }

    .section {
      padding: 1rem;
    }

    .action-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>

<script>
  // Check for referral code in URL on page load
  (() => {
    const urlParams = new URLSearchParams(window.location.search);
    const referralCode = urlParams.get('ref');

    if (referralCode) {
      import('@/stores/referral').then(({ initializeReferralSystem }) => {
        initializeReferralSystem(referralCode);

        // Clean up URL
        window.history.replaceState({}, '', '/referrals');
      });
    }
  })();
</script>
