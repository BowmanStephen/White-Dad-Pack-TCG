---
import BaseLayout from '../layouts/BaseLayout.astro';
import { showToast } from '../stores/ui';
---

<BaseLayout title="Toast Test - DadDeck">
  <div class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl font-bold mb-8 text-center bg-gradient-to-r from-amber-400 to-orange-500 bg-clip-text text-transparent">
        Toast Notification Test
      </h1>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mb-8">
        <button
          class="btn-primary"
          onclick="() => { showToast('Success message!', 'success'); }"
        >
          Test Success Toast
        </button>

        <button
          class="btn-primary"
          onclick="() => { showToast('Error occurred!', 'error'); }"
        >
          Test Error Toast
        </button>

        <button
          class="btn-primary"
          onclick="() => { showToast('Information message', 'info'); }"
        >
          Test Info Toast
        </button>

        <button
          class="btn-primary"
          onclick="() => { showToast('Warning message', 'warning'); }"
        >
          Test Warning Toast
        </button>

        <button
          class="btn-primary"
          onclick="() => { showToast('Achievement unlocked!', 'achievement'); }"
        >
          Test Achievement Toast
        </button>

        <button
          class="btn-primary"
          onclick="() => { showToast('Short'); showToast('Medium message!', 'info'); showToast('This is a much longer message that tests how the toast handles text wrapping and layout.', 'warning'); }"
        >
          Test Multiple Toasts
        </button>
      </div>

      <div class="bg-slate-800/50 backdrop-blur-sm border border-slate-700 rounded-lg p-6">
        <h2 class="text-2xl font-bold mb-4">About This Test</h2>
        <p class="text-slate-300 mb-4">
          This page tests the new toast notification system. Click the buttons above to see different notification types.
        </p>
        <ul class="list-disc list-inside space-y-2 text-slate-300">
          <li><strong>Success:</strong> Green background with checkmark icon</li>
          <li><strong>Error:</strong> Red background with X icon</li>
          <li><strong>Info:</strong> Blue background with info icon</li>
          <li><strong>Warning:</strong> Yellow/amber background with warning icon</li>
          <li><strong>Achievement:</strong> Purple background with trophy icon</li>
          <li><strong>Multiple:</strong> Tests stacking behavior (max 5 toasts)</li>
        </ul>
        <p class="text-slate-300 mt-4">
          <strong>Features:</strong>
        </p>
        <ul class="list-disc list-inside space-y-2 text-slate-300">
          <li>Auto-dismiss after 4 seconds (default)</li>
          <li>Click to dismiss manually</li>
          <li>Smooth slide-in/slide-out animations</li>
          <li>Stacks up to 5 notifications</li>
          <li>Mobile responsive positioning</li>
          <li>Respects prefers-reduced-motion</li>
        </ul>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .btn-primary {
    @apply px-6 py-3 bg-gradient-to-r from-amber-500 to-orange-500 text-white font-bold rounded-lg shadow-lg hover:from-amber-400 hover:to-orange-400 active:scale-95 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-amber-400 focus:ring-offset-2 focus:ring-offset-slate-900;
  }
</style>
