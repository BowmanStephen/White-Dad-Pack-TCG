---
/**
 * Profile Page
 *
 * Player profile system with customization options including username,
 * avatar selection, bio text, favorite card display, and badges.
 * Users can express themselves and showcase their achievements.
 */

import BaseLayout from '@/layouts/BaseLayout.astro';
import ProfilePage from '@/components/profile/ProfilePage.svelte';
import { SITE_NAME } from '@/lib/seo';

// Page metadata
const title = `Profile - ${SITE_NAME}`;
const description = `Customize your dad profile with username, avatar, bio, and favorite card. Showcase your badges and achievements to the community.`;
---

<BaseLayout title={title} description={description}>
  <main class="profile-page-container min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <ProfilePage client:only="svelte" />
    </div>
  </main>
</BaseLayout>

<style>
  /* Page-specific overrides */
  .profile-page-container {
    background-image:
      radial-gradient(circle at 20% 50%, rgba(251, 146, 60, 0.05) 0%, transparent 50%),
      radial-gradient(circle at 80% 80%, rgba(239, 68, 68, 0.05) 0%, transparent 50%);
  }

  /* Custom scrollbar for profile sections */
  :global(.profile-view) {
    scrollbar-width: thin;
    scrollbar-color: rgba(251, 146, 60, 0.5) rgba(255, 255, 255, 0.05);
  }

  :global(.profile-view)::-webkit-scrollbar {
    width: 8px;
  }

  :global(.profile-view)::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 4px;
  }

  :global(.profile-view)::-webkit-scrollbar-thumb {
    background: rgba(251, 146, 60, 0.5);
    border-radius: 4px;
  }

  :global(.profile-view)::-webkit-scrollbar-thumb:hover {
    background: rgba(251, 146, 60, 0.7);
  }
</style>
