---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'Performance Dashboard';
const description = 'Real-time performance monitoring for development';
---

<BaseLayout title={title} description={description}>
  <main class="container">
    <div class="page-header">
      <h1 class="page-title">Performance Dashboard</h1>
      <p class="page-description">Real-time performance monitoring for development</p>
    </div>

    {#if import.meta.env.DEV}
      <div class="dev-only">
        <p>Performance monitoring is only available in development mode.</p>
      </div>
    {:else}
      <div class="not-available">
        <div class="not-available-icon">ðŸ”’</div>
        <h2>Development Only</h2>
        <p>
          The Performance Dashboard is only available in development mode.
          This tool helps developers track metrics during development.
        </p>
      </div>
    {/if}
  </main>
</BaseLayout>
