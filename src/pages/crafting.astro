---
import BaseLayout from '../layouts/BaseLayout.astro';
import CraftingStation from '../components/crafting/CraftingStation.svelte';
import Navigation from '../components/common/Navigation.svelte';
import SettingsModal from '../components/common/SettingsModal.svelte';

// Enhanced SEO for crafting page
const title = "Card Crafting - DadDeck Trading Card Game";
const description = "Craft powerful cards by combining duplicates in DadDeck. Turn 5 common cards into 1 uncommon, or take risks to craft legendary and mythic rarity cards with our free browser TCG crafting system.";
const craftingPageURL = new URL('/crafting', Astro.site).href;
const imageURL = new URL('/og-image.png', Astro.site).href;

// CraftingPage structured data
const craftingPageSchema = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": "DadDeck Card Crafting Station",
  "url": craftingPageURL,
  "description": "Combine duplicate cards to craft rarer ones in the DadDeck trading card game",
  "about": {
    "@type": "Thing",
    "name": "Card Crafting System",
    "description": "TCG card crafting and fusion mechanics"
  }
};
---

<BaseLayout
  title={title}
  description={description}
  image="/og-image.png"
>
  <Navigation client:load />
  <SettingsModal client:load />

  <!-- Page Header -->
  <div class="page-header">
    <div class="max-w-6xl mx-auto px-4 py-12 text-center">
      <h1 class="text-4xl md:text-5xl font-black text-white mb-4">
        <span class="text-amber-400">Card</span> Crafting
      </h1>
      <p class="text-slate-400 text-lg">
        Combine your duplicate cards to craft rarer ones
      </p>
    </div>
  </div>

  <!-- Crafting Station -->
  <main id="main-content" class="crafting-main" tabindex="-1" role="main" aria-label="Card crafting station">
    <CraftingStation client:load />
  </main>

  <!-- Structured data for crafting page -->
  <script type="application/ld+json" set:html={JSON.stringify(craftingPageSchema)} />
</BaseLayout>

<style>
  .page-header {
    background: linear-gradient(to bottom, rgba(15, 23, 42, 0.9), rgba(15, 23, 42, 0.6));
    border-bottom: 1px solid rgba(71, 85, 105, 0.2);
  }

  .crafting-main {
    min-height: calc(100vh - 200px);
    background: radial-gradient(ellipse at top, rgba(251, 191, 36, 0.05) 0%, transparent 50%),
                linear-gradient(to bottom, #0f172a, #1e293b);
  }
</style>
