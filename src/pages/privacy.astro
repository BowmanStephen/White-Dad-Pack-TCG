    icon: 'üìä',
    title: 'privacy.data_title',
    content: 'privacy.data_content',
    subsections: [
      {
        title: 'privacy.localstorage_title',
        content: 'privacy.localstorage_content'
      },
      {
        title: 'privacy.analytics_title',
        content: 'privacy.analytics_content'
      },
      {
