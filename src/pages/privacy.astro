  },
  {
    id: 'data-sharing',
    icon: 'üîí',
    title: 'privacy.sharing_title',
    content: 'privacy.sharing_content'
  },
  {
    id: 'user-rights',
    icon: '‚öñÔ∏è',
    title: 'privacy.rights_title',
    content: 'privacy.rights_content',
    subsections: [
      {
        title: 'privacy.access_title',
        content: 'privacy.access_content'
      },
      {
        title: 'privacy.deletion_title',
        content: 'privacy.deletion_content'
      },
      {
        title: 'privacy.optout_title',
        content: 'privacy.optout_content'
      }
    ]
  },
  {
    id: 'security',
    icon: 'üõ°Ô∏è',
    title: 'privacy.security_title',
    content: 'privacy.security_content'
  },
  {
    id: 'children',
    icon: 'üë∂',
    title: 'privacy.children_title',
    content: 'privacy.children_content'
  },
  {
    id: 'changes',
    icon: 'üìù',
    title: 'privacy.changes_title',
    content: 'privacy.changes_content'
  },
  {
    id: 'contact',
    icon: 'üìß',
