---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/common/Navigation.svelte';
import SettingsModal from '../components/common/SettingsModal.svelte';
import UpgradeManager from '../components/upgrade/UpgradeManager.svelte';

// SEO
const title = "Card Upgrades - DadDeck™ Trading Card Simulator";
const description = "Upgrade your cards by consuming duplicates. Each upgrade increases all stats by +5. Max level is 3 (+15 total).";

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<BaseLayout
  title={title}
  description={description}
  image="/og-image.png"
  canonicalURL={canonicalURL}
>
  <!-- Critical components -->
  <Navigation client:load />

  <!-- Defer non-critical components -->
  <SettingsModal client:idle />

  <main id="main-content" class="pt-16 min-h-screen" tabindex="-1" role="main">
    <div class="container mx-auto px-4 py-8">
      <!-- Page Header -->
      <header class="text-center mb-8">
        <h1 class="text-4xl font-black text-white mb-2">
          <span class="text-yellow-400">⚡</span> Card Upgrades
        </h1>
        <p class="text-slate-400 max-w-2xl mx-auto">
          Consume duplicate cards to upgrade your favorites. Each upgrade increases all stats by +5,
          with a maximum of 3 upgrades (+15 total) per card.
        </p>
      </header>

      <!-- Upgrade Manager -->
      <UpgradeManager client:load />
    </div>
  </main>
</BaseLayout>
