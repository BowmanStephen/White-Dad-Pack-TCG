---
/**
 * PACK-045: Storage Management Page
 *
 * Allows users to:
 * - View current storage usage
 * - Manually trigger quota management
 * - Archive old packs
 * - Clear all data
 */
import BaseLayout from '@/layouts/BaseLayout.astro';
import StorageQuotaWarning from '@/components/storage/StorageQuotaWarning.svelte';
import StorageManagement from '@/components/storage/StorageManagement.svelte';
---

<BaseLayout title="Storage Management - DadDeckâ„¢">
  <main class="storage-page">
    <div class="container">
      <header class="page-header">
        <h1>Storage Management</h1>
        <p>Manage your local storage and keep your collection running smoothly.</p>
      </header>

      <StorageManagement client:only="svelte" />
      <StorageQuotaWarning client:only="svelte" />
    </div>
  </main>
</BaseLayout>

<style>
  .storage-page {
    min-height: 100vh;
    background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
    padding: 2rem 1rem;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
  }

  .page-header {
    text-align: center;
    margin-bottom: 2rem;
    color: white;
  }

  .page-header h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .page-header p {
    font-size: 1.125rem;
    color: #94a3b8;
    margin: 0;
  }

  @media (max-width: 640px) {
    .page-header h1 {
      font-size: 2rem;
    }

    .page-header p {
      font-size: 1rem;
    }
  }
</style>
