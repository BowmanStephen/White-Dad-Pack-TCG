{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@lib/*": ["src/lib/*"],
      "@stores/*": ["src/stores/*"],
      "@data/*": ["src/data/*"],
      "@types/*": ["src/types/*"],
      "@mocks/*": ["tests/mocks/*"]
    }
  },
  "include": [
    ".astro/types.d.ts",
    "src/**/*",
    "tests/**/*",
    "astro.config.mjs"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.stories.ts",
    "**/*.stories.tsx",
    "src/_archived/**/*"
  ]
}
