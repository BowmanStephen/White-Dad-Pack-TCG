{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@lib/*": ["src/lib/*"],
      "@stores/*": ["src/stores/*"],
      "@data/*": ["src/data/*"]
    }
  },
  "include": [".astro/types.d.ts", "src/types/**/*.d.ts", "**/*"],
  "exclude": ["dist", "node_modules", "**/*.stories.ts", "**/*.stories.tsx"]
}
